{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug gatesvr",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gatesvr",
            "args": [
                "-config",
                "config.yaml"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug gatesvr (Manual Args)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/gatesvr",
            "args": [
                "-quic",
                ":8443",
                "-http",
                ":8080",
                "-upstream",
                "localhost:9000"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug upstream",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/upstream",
            "args": [
                "-addr",
                ":9000"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug client (Interactive)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client",
            "args": [
                "-server",
                "localhost:8443",
                "-interactive"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug client (Performance 1)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client",
            "args": [
                "-server",
                "localhost:8443",
                "-performance",
                "-clients",
                "1",
                "-request-interval",
                "200ms"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Debug client (Performance 5)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client",
            "args": [
                "-server",
                "localhost:8443",
                "-performance",
                "-clients",
                "5",
                "-request-interval",
                "200ms"
            ],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Full System",
            "configurations": [
                "Debug upstream",
                "Debug gatesvr"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "System",
                "order": 1
            }
        },
        {
            "name": "Debug System + Interactive Client",
            "configurations": [
                "Debug upstream",
                "Debug gatesvr",
                "Debug client (Interactive)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "Testing",
                "order": 1
            }
        }
    ]
}